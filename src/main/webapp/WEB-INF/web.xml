<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.xhtml</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>/home/home.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- mike block -->
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>com.mike.user.controller.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user/update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user/updating</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user/register</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user/registering</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GameServlet</servlet-name>
		<servlet-class>com.mike.game.controller.GameServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GameServlet</servlet-name>
		<url-pattern>/game/list</url-pattern>
	</servlet-mapping>
	
</web-app>
